{
  "expo": {
    "sdkVersion": "54.0.0",
    "name": "Cocktail App",
    "slug": "cocktail-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "cocktailapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fall491group1.cocktailapp"
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.fall491group1.cocktailapp"
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font"
    ],

    "experiments": {
      "typedRoutes": true
    },

    "extra": { 
      "google": {
        "iosClientId": "IOS_CLIENT_ID.apps.googleusercontent.com",
        "androidClientId": "ANDROID_CLIENT_ID.apps.googleusercontent.com",
        "webClientId": "WEB_CLIENT_ID.apps.googleusercontent.com"
      }
    }
  }
}
